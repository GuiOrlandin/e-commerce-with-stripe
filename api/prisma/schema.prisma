datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id            String   @id @default(auto()) @map("_id") @db.ObjectId
    created_at    DateTime @default(now())
    email         String   @unique
    password_hash String
    role          String?
    name          String
    phone_number  String?
    profile_picture String?
    adress         String?

    products        Json?
    purchasedProducts Json?

    @@map("users")
}



